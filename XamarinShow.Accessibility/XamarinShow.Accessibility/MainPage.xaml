<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamarinShow.Accessibility"
             x:Class="XamarinShow.Accessibility.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="iOS version distribution" 
           HorizontalOptions="Center"
           VerticalOptions="Start" />
        <StackLayout VerticalOptions="CenterAndExpand">
            <BoxView HorizontalOptions="Start"  BackgroundColor="Red" WidthRequest="360" 
                     AutomationProperties.IsInAccessibleTree="true" AutomationProperties.Name="{Binding IOS12, StringFormat='{}iOS 12 {0:F2} %'}" TabIndex="0" />
            <BoxView HorizontalOptions="Start" BackgroundColor="Purple" WidthRequest="160"
                     AutomationProperties.IsInAccessibleTree="true" AutomationProperties.Name="{Binding IOS11, StringFormat='{}iOS 11 {0:F2} %'}" TabIndex="2" />
            <BoxView HorizontalOptions="Start" BackgroundColor="Green" WidthRequest="120"
                     AutomationProperties.IsInAccessibleTree="true" AutomationProperties.Name="{Binding Other, StringFormat='{}Other{0:F2} %'}" TabIndex="1" />
        </StackLayout>
    </StackLayout>
</ContentPage>
